{
  "name": "pi-voice",
  "version": "0.1.0",
  "description": "Voice interface for pi coding agent",
  "author": "yukukotani",
  "main": "./out/main/index.js",
  "type": "module",
  "private": true,
  "bin": {
    "pi-voice": "./bin/pi-voice"
  },
  "scripts": {
    "cli": "bun src/cli.ts",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps",
    "dist": "bun run build && electron-builder --mac --config",
    "dist:dir": "bun run build && electron-builder --mac --dir --config"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "electron": "^40.2.1",
    "electron-vite": "^3.1.0",
    "electron-builder": "^26.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@google/genai": "^1.40.0",
    "@mariozechner/pi-coding-agent": "^0.52.7",
    "iohook-macos": "^1.2.1"
  },
  "trustedDependencies": [
    "electron",
    "iohook-macos",
    "protobufjs"
  ]
}
