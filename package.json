{
  "name": "pi-voice",
  "version": "0.3.2",
  "description": "Voice interface for pi coding agent",
  "author": "Yuku Kotani",
  "license": "MIT",
  "type": "module",
  "main": "./out/main/index.js",
  "bin": {
    "pi-voice": "./bin/pi-voice"
  },
  "files": [
    "bin/",
    "out/"
  ],
  "scripts": {
    "cli": "bun src/cli.ts",
    "dev:electron": "electron-vite dev",
    "dev:cli": "bun src/cli.ts",
    "build": "bun run build:electron && bun run build:cli",
    "build:electron": "electron-vite build",
    "build:cli": "bun build src/cli.ts --outdir out/cli --target node --format esm --external electron",
    "preview": "electron-vite preview",
    "prepack": "bun run build",
    "prepublish": "bun run build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "electron-vite": "^3.1.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@google/genai": "^1.40.0",
    "@mariozechner/pi-coding-agent": "^0.52.7",
    "@napi-rs/whisper": "^0.0.4",
    "electron": "^40.2.1",
    "openai": "^6.10.0",
    "pino": "^10.3.1",
    "uiohook-napi": "^1.5.4",
    "zod": "^4.3.6"
  },
  "trustedDependencies": [
    "electron",
    "uiohook-napi",
    "protobufjs"
  ]
}
